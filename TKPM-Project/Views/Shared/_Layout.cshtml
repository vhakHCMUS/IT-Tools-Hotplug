<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TKPM_Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TKPM_Project.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <!-- Add modern Animation library -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

    <!-- Enhanced Soft Pink Theme CSS -->
    <style>
        /* 🎨 Soft Pink-Light Color Palette */
        :root {
            --primary-pink: #ffb6c1; /* Light Pink */
            --secondary-pink: #f8c8dc; /* Soft Blush */
            --accent-rose: #ff91a4; /* Rose Pink */
            --background-light: #fff0f5; /* Lavender Blush */
            --text-dark: #6a0572; /* Deep Purple */
            --border-soft: #ffdde1; /* Soft Border */
            --gold-gradient: linear-gradient(135deg, #ffd700, #ffec8b); /* Gold Effect */
        }

        /* 🌸 Apply Modern Flat Theme */
        body {
            background-color: var(--background-light);
            color: var(--text-dark);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            overflow-x: hidden;
        }

        /* Modern Header with Elevation */
        header {
            background-color: #ffffff;
            box-shadow: 0 4px 12px rgba(255, 145, 164, 0.15);
            position: sticky;
            top: 0;
            z-index: 1000;
            transition: all 0.3s ease;
        }

            header.scrolled {
                box-shadow: 0 4px 16px rgba(255, 145, 164, 0.25);
            }

        .navbar {
            padding: 0.75rem 1rem;
        }

        .navbar-brand {
            color: var(--text-dark);
            font-weight: 700;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
            position: relative;
        }

            .navbar-brand:hover {
                color: var(--accent-rose);
            }

            .navbar-brand::after {
                content: '';
                position: absolute;
                bottom: -3px;
                left: 0;
                width: 0;
                height: 3px;
                background-color: var(--accent-rose);
                transition: width 0.3s ease;
            }

            .navbar-brand:hover::after {
                width: 100%;
            }

        /* Navigation Links Styling */
        .nav-link {
            color: var(--text-dark) !important;
            font-weight: 500;
            padding: 0.5rem 1rem !important;
            margin: 0 0.25rem;
            border-radius: 8px;
            transition: all 0.3s ease;
            position: relative;
        }

            .nav-link::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 50%;
                width: 0;
                height: 2px;
                background-color: var(--accent-rose);
                transition: all 0.3s ease;
                transform: translateX(-50%);
            }

            .nav-link:hover {
                color: var(--accent-rose) !important;
                background-color: rgba(255, 182, 193, 0.1);
            }

                .nav-link:hover::after {
                    width: 70%;
                }

            .nav-link.active {
                color: var(--accent-rose) !important;
                background-color: rgba(255, 182, 193, 0.15);
            }

                .nav-link.active::after {
                    width: 70%;
                }

        /* Button Styling */
        .btn {
            border-radius: 8px;
            padding: 0.5rem 1.25rem;
            font-weight: 500;
            transition: all 0.3s ease;
            letter-spacing: 0.3px;
            box-shadow: none;
        }

            .btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            }

        .btn-primary {
            background-color: var(--accent-rose);
            border-color: var(--accent-rose);
        }

            .btn-primary:hover, .btn-primary:focus {
                background-color: #ff7a94;
                border-color: #ff7a94;
            }

        .btn-outline-primary {
            color: var(--accent-rose);
            border-color: var(--accent-rose);
        }

            .btn-outline-primary:hover, .btn-outline-primary:focus {
                background-color: var(--accent-rose);
                color: white;
            }

        /* User Profile Button */
        .user-profile-btn {
            display: flex;
            align-items: center;
            background-color: white;
            border: 2px solid var(--secondary-pink);
            border-radius: 50px;
            padding: 0.5rem 1rem;
            color: var(--text-dark);
            transition: all 0.3s ease;
            font-weight: 500;
            box-shadow: 0 2px 8px rgba(255, 182, 193, 0.15);
        }

            .user-profile-btn:hover {
                background-color: var(--secondary-pink);
                color: var(--text-dark);
                box-shadow: 0 4px 12px rgba(255, 182, 193, 0.25);
                transform: translateY(-2px);
            }

            .user-profile-btn i {
                margin-right: 8px;
                font-size: 1.2em;
                color: var(--accent-rose);
            }

        /* Modern Dropdown Menu */
        .user-dropdown .dropdown-menu {
            border-radius: 12px;
            border: none;
            box-shadow: 0 8px 16px rgba(255, 182, 193, 0.2);
            overflow: hidden;
            animation: fadeIn 0.3s ease;
            margin-top: 10px;
        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .user-dropdown .dropdown-item {
            color: var(--text-dark);
            padding: 0.75rem 1.25rem;
            transition: all 0.2s ease;
            position: relative;
            display: flex;
            align-items: center;
        }

            .user-dropdown .dropdown-item:hover {
                background-color: var(--secondary-pink);
                color: var(--text-dark);
            }

            .user-dropdown .dropdown-item i {
                margin-right: 10px;
                font-size: 1.1em;
                color: var(--accent-rose);
            }

        .user-dropdown .dropdown-divider {
            border-color: var(--border-soft);
            margin: 0.5rem 0;
        }

        /* Main Container */
        .main-container {
            background-color: white;
            border-radius: 16px;
            box-shadow: 0 8px 24px rgba(255, 182, 193, 0.15);
            padding: 2rem;
            margin: 2rem auto;
            max-width: 1200px;
            animation: fadeInUp 0.5s ease;
        }

        @@keyframes fadeInUp {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        /* Modern Footer */
        footer {
            background-color: white;
            color: var(--text-dark);
            padding: 1.5rem 0;
            box-shadow: 0 -4px 12px rgba(255, 145, 164, 0.1);
            text-align: center;
        }

            footer a {
                color: var(--accent-rose);
                transition: all 0.3s ease;
                position: relative;
            }

                footer a::after {
                    content: '';
                    position: absolute;
                    bottom: -2px;
                    left: 0;
                    width: 0;
                    height: 2px;
                    background-color: var(--accent-rose);
                    transition: width 0.3s ease;
                }

                footer a:hover {
                    color: var(--accent-rose);
                    text-decoration: none;
                }

                    footer a:hover::after {
                        width: 100%;
                    }
    </style>
</head>
<body>
    <header id="main-header">
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-tools me-2"></i>TKPM_Project
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Index" && ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")"
                               asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house me-1"></i>Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Tools" ? "active" : "")"
                               asp-area="" asp-controller="Tool" asp-action="Tools">
                                <i class="bi bi-grid me-1"></i>Tools
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Privacy" ? "active" : "")"
                               asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="bi bi-shield-check me-1"></i>Privacy
                            </a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "ToolManager" ? "active" : "")"
                                   asp-area="" asp-controller="Tool" asp-action="ToolManager">
                                    <i class="bi bi-gear me-1"></i>Tool Manager
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "UserManager" ? "active" : "")"
                                   asp-area="" asp-controller="User" asp-action="UserManager">
                                    <i class="bi bi-people me-1"></i>User Manager
                                </a>
                            </li>
                        }
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "LikedTools" ? "active" : "")"
                                   asp-area="" asp-controller="Tool" asp-action="LikedTools">
                                    <i class="bi bi-heart me-1"></i>Liked Tools
                                </a>
                            </li>
                        }
                    </ul>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="user-dropdown dropdown ms-3">
                            <button class="user-profile-btn dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle"></i>
                                @User.Identity.Name
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li><a class="dropdown-item" asp-controller="User" asp-action="Profile"><i class="bi bi-person me-2"></i>My Profile</a></li>
                                <li><a class="dropdown-item" asp-controller="User" asp-action="PremiumRequest"><i class="bi bi-trophy me-2"></i>@(User.IsInRole("Premium") ? "Premium Status" : "Get Premium")</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <button type="button" class="dropdown-item" onclick="logout()"><i class="bi bi-box-arrow-right me-2"></i>Logout</button>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <div class="d-flex gap-2">
                            <a class="btn btn-primary" asp-controller="Account" asp-action="Login">Login</a>
                            <a class="btn btn-outline-primary" asp-controller="Account" asp-action="Register">Register</a>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="main-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            © 2025 - TKPM_Project - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Add header scroll effect
        window.addEventListener('scroll', () => {
            const header = document.getElementById('main-header');
            if (window.scrollY > 50) {
                header.classList.add('scrolled');
            } else {
                header.classList.remove('scrolled');
            }
        });

        async function logout() {
            const response = await fetch('/api/auth/logout', { method: 'POST' });
            if (response.ok) {
                window.location.href = "/";
            } else {
                alert("Logout failed");
            }
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>