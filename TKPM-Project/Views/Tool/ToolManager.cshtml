@using TKPM_Project.Models.Tools
@model List<Tool>

@{
    ViewData["Title"] = "Tool Manager";
}

<!-- Same styles as before -->
<style>
    :root {
        --primary-pink: #ffb6c1;
        --secondary-pink: #f8c8dc;
        --accent-rose: #ff91a4;
        --background-light: #fff0f5;
        --text-dark: #6a0572;
        --border-soft: #ffdde1;
    }

    /* Rest of the styles remain the same */
    body {
        background-color: var(--background-light);
        color: var(--text-dark);
    }

    .container {
        max-width: 900px;
    }

    .card {
        background-color: #ffffff;
        border: 2px solid var(--border-soft);
        border-radius: 16px;
        box-shadow: 2px 4px 10px rgba(255, 182, 193, 0.2);
    }

    .form-control, .form-select {
        border-radius: 12px;
        border: 1px solid var(--border-soft);
    }

    .btn-pink {
        background-color: var(--primary-pink);
        color: var(--text-dark);
        border-radius: 20px;
        padding: 10px 16px;
        transition: 0.3s;
    }

        .btn-pink:hover {
            background-color: var(--accent-rose);
            color: white;
        }

    .table thead {
        background-color: var(--secondary-pink);
    }

    .table tbody tr:hover {
        background-color: rgba(255, 182, 193, 0.3);
    }

    .form-switch .form-check-input {
        background-color: var(--primary-pink);
        border: 1px solid var(--accent-rose);
    }

        .form-switch .form-check-input:checked {
            background-color: var(--accent-rose);
        }
</style>

<div class="container mt-4">
    <h1 class="mb-4 text-center fw-bold" style="color: var(--text-dark);">🌸 Tool Manager 🌸</h1>

    <!-- New Import Section for ToolManager -->
    <div class="card p-3 mb-4">
        <div class="card-body">
            <h3 class="card-title">📥 Import Tool to Manager</h3>
            <form asp-action="ImportTool" asp-controller="Tool" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="managerDllFile" class="form-label">Upload Tool .dll:</label>
                    <input type="file" name="dllFile" id="managerDllFile" class="form-control" accept=".dll" required />
                </div>
                <div class="mb-3">
                    <label for="toolCategory" class="form-label">Tool Category:</label>
                    <input type="text" name="toolCategory" id="toolCategory" class="form-control" placeholder="Enter category" />
                </div>
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-pink">Import to Manager</button>
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">Back to Tools</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Tools Table -->
    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Tool Name</th>
                        <th>Category</th>
                        <th>Premium</th>
                        <th>Available</th>
                        <th>Created At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tool in Model)
                    {
                        <tr>
                            <td>@tool.Name</td>
                            <td>@tool.Category</td>
                            <td class="text-center">
                                <div class="form-check form-switch d-flex justify-content-center">
                                    <input class="form-check-input" type="checkbox" id="premium_@tool.Name"
                                    @(tool.IsPremium ? "checked" : "") onchange="togglePremium('@tool.Name', this);" />
                                </div>
                            </td>
                            <td class="text-center">
                                <div class="form-check form-switch d-flex justify-content-center">
                                    <input class="form-check-input" type="checkbox" id="available_@tool.Name"
                                    @(tool.IsAvailable ? "checked" : "") onchange="toggleAvailability('@tool.Name', this);" />
                                </div>
                            </td>
                            <td>@tool.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                            <td>
                                <a asp-action="Detail" asp-route-toolName="@tool.Name" class="btn btn-outline-info btn-sm rounded-pill">View</a>
                                <form asp-action="DeleteTool" method="post" class="d-inline">
                                    <input type="hidden" name="toolName" value="@tool.Name" />
                                    <button type="submit" class="btn btn-outline-danger btn-sm rounded-pill" onclick="return confirm('Are you sure you want to delete @tool.Name?')">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <p class="mt-3 text-muted text-center">Managing @Model.Count tools.</p>
    }
    else
    {
        <p class="text-muted text-center">No tools available in manager.</p>
    }
</div>

@section Scripts {
    <script>
        function togglePremium(toolName, element) {
            $.ajax({
                url: '@Url.Action("TogglePremium", "Tool")',
                type: 'POST',
                data: { toolName: toolName, isPremium: element.checked },
                success: function (response) {
                    if (!response.success) {
                        alert('Error: ' + response.message);
                        element.checked = !element.checked;
                    }
                },
                error: function () {
                    alert('Error toggling premium status.');
                    element.checked = !element.checked;
                }
            });
        }

        function toggleAvailability(toolName, element) {
            $.ajax({
                url: '@Url.Action("ToggleAvailability", "Tool")',
                type: 'POST',
                data: { toolName: toolName, isAvailable: element.checked },
                success: function (response) {
                    if (!response.success) {
                        alert('Error: ' + response.message);
                        element.checked = !element.checked;
                    }
                },
                error: function () {
                    alert('Error toggling availability.');
                    element.checked = !element.checked;
                }
            });
        }
    </script>
}